<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ManageServiceScreenActivity">

  <com.google.android.material.appbar.AppBarLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/add_new_service_back"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Trang Quản Lý"
        app:titleCentered="true"
        android:background="@color/white">

    </com.google.android.material.appbar.MaterialToolbar>

  </com.google.android.material.appbar.AppBarLayout>
  <ImageView
      android:layout_gravity="center"
      android:layout_width="200sp"
      android:layout_height="200sp"
      android:src="@drawable/ic_time"/>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:layout_margin="30dp">
    <Button
        android:id="@+id/btnGoToManageService"
        app:icon="@drawable/ic_manage_service"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:text="Quản lý dịch vụ"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/imgInput" />

    <Button
        android:id="@+id/btnGoToManageAccount"
        app:icon="@drawable/ic_account"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:text="Quản lý tài khoản"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/imgInput" />
    <Button
        android:id="@+id/btnGoToSchedule"
        app:icon="@drawable/ic_calendar_month"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:text="Lịch Hẹn"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/imgInput" />
    <Button
        android:id="@+id/btnGoToUserPage"
        app:icon="@drawable/ic_home"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:text="Trang Khách Hàng"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/imgInput" />
    <Button
        android:id="@+id/btnLogOut"
        app:icon="@drawable/ic_exit"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:text="Đăng xuất"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/imgInput" />
  </LinearLayout>

  </LinearLayout>
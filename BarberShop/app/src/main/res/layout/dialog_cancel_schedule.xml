<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bg_white_corner"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <TextView
        android:text="MESSAGE"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:padding="16dp"
        android:gravity="center"
        android:background="@drawable/bg_header_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/message_dialog"
        android:gravity="center"
        android:padding="16dp"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:text="Bạn có muốn hủy lịch không ?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel_dialog"
            android:text="Cancel"
            android:backgroundTint="@color/xam"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/agree_dialog"
            android:text="agree"
            android:backgroundTint="@color/header_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>
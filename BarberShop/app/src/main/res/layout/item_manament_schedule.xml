<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/layout_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="5dp"
    app:contentPadding="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgService"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/anh1"/>

    <LinearLayout
        android:layout_toEndOf="@+id/imgSchedule"
        android:layout_marginStart="60dp"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtName"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:textColor="@android:color/holo_blue_light"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtPhone"
                android:padding="5dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtTimeOder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtTimeOder"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/txtDen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtDen"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/txtTimeFinish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtTimeFinish"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:padding="5dp"
                android:paddingEnd="30dp"/>

            <TextView
                android:id="@+id/txtTest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:padding="5dp"
                android:paddingEnd="30dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

